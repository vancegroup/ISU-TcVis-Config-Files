
versionNumber 0.1
#initCommand "clusterMode:9090"
initCommand ""

view CAVE
{
  units   feet
  designEyeOffset 0,0,0

  display MiddleDisplay
  {
    pipe                 ""
    border               BORDER_OFF
    stereo               STEREO_ON
    channel              MyMainChannel
    {
      #                    WidthxHeight+Xoffset+Yoffset
      frameBufferGeometry  1600x1200+0+0
      #                    WidthxHeight+Xoffset+Yoffset
      virtualGeometry      400x300-200-150
      projectorRotation    0
      #                    yaw, pitch, roll
      viewRotation         0, 0, 0
      #                    Left, Right, Top, Bottom, Distance
      physicalDimensions   -6.0, 6.0, 4.5, -4.5, 4.5
    }
  }

  display RightDisplay
  {
    pipe                 ""
    border               BORDER_OFF
    stereo               STEREO_ON
    channel              MyMainChannel
    {
      #                    WidthxHeight+Xoffset+Yoffset
      frameBufferGeometry  1600x1200+1600+0
      #                    WidthxHeight+Xoffset+Yoffset
      virtualGeometry      400x300+200-150
      projectorRotation    0
      #                    yaw, pitch, roll
      viewRotation         90, 0, 0
      #                    Left, Right, Top, Bottom, Distance
      physicalDimensions   -6.0, 6.0, 4.5, -4.5, 6.0
    }
  }

  display BottomDisplay
  {
    pipe                 ""
    border               BORDER_OFF
    stereo               STEREO_ON
    channel              MyMainChannel
    {
      #                    WidthxHeight+Xoffset+Yoffset
      frameBufferGeometry  1600x1200+3200+0
      #                    WidthxHeight+Xoffset+Yoffset
      virtualGeometry      400x300-200+150
      projectorRotation    0
      #                    yaw, pitch, roll
      viewRotation         0, 90, 0
      #                    Left, Right, Top, Bottom, Distance
      physicalDimensions   -6.0, 6.0, 4.5, -4.5, 4.5
    }
  }
}

exitCommand " "
